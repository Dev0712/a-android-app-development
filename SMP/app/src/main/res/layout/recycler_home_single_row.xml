<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContent"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:weightSum="6">
    <ImageView
        android:id="@+id/imgPersonImage"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:src="@drawable/ic_home"
        android:scaleType="centerCrop" />
    <RelativeLayout
        android:layout_weight="3.6"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txtPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="List Item"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPersonMobileno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPersonName"
            android:padding="5dp"
            android:text="List Item"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPersonEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPersonMobileno"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="List Item"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1.0"
        android:layout_margin="10dp">
        <RatingBar
            android:id="@+id/ratingBar"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:numStars="1"/>

        <TextView
            android:id="@+id/txtPersonRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="4.2"
            android:layout_marginTop="60dp"
            android:textColor="#FAE531"
            android:textSize="18sp"
            />
    </RelativeLayout>


</LinearLayout>